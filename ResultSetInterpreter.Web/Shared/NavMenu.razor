<MudNavMenu Class="d-flex flex-column" Style="height: 100%;">
    <MudText Typo="Typo.h6" Class="px-4">Converters and Tools</MudText>
    <hr />
    <MudNavLink Href="/" Match="NavLinkMatch.All">
        Home
    </MudNavLink>
    
    <MudNavLink Href="/ExcelComparisonWeb" Match="NavLinkMatch.Prefix">
        Excel Comparison
    </MudNavLink>
    
    <MudNavLink Href="/InsertStatementConverter" Match="NavLinkMatch.Prefix">
        Insert Statement Converter
    </MudNavLink>
    <div style="flex-grow: 1;" ></div>
    <hr />
    <MudNavLink OnClick="@(() => ToggleDarkMode(!IsDarkMode))"
                Icon="@(IsDarkMode ? Icons.Material.Filled.WbSunny : Icons.Material.Filled.Nightlight)" IconColor="Color.Primary">
        @(IsDarkMode ? "Switch to Light Mode" : "Switch to Dark Mode")
    </MudNavLink>
</MudNavMenu>

@code {

    [Parameter] public Action<bool> OnToggleDarkMode { get; set; } = default!;
    [Parameter] public bool IsDarkMode { get; set; }

    private void ToggleDarkMode(bool toggle)
    {
        OnToggleDarkMode?.Invoke(toggle);
    }

}